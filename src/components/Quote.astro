---
interface Props {
	author?: string;
	source?: string;
}

const { author, source } = Astro.props;
---

<figure class="post-blockquote grid">
	<blockquote class="flow">
		<slot />
	</blockquote>

	{
		// prettier-ignore
		(!!author || !!source) && (
			<figcaption>
				â€” {author}{author && source && `,`}
				{source && `<cite>${source}</cite>`}
