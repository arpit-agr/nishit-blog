---
interface Props {
	pubDate: Date;
	class?: string;
}

const { pubDate, class: className } = Astro.props;
---

<time class={className} datetime={pubDate.toISOString()}>
	{
		pubDate.toLocaleDateString("en-IN", {
			timeZone: "Asia/Kolkata",
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>

<style>
	time {
		display: block;
		font-size: var(--step--1);
	}
</style>
